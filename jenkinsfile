pipeline {
    agent any
    environment {
        AWS_ACCESS_KEY_ID = credentials("AWS_ACCESS_KEY_ID")
        AWS_SECRET_ACCESS_KEY = credentials("AWS_SECRET_ACCESS_KEY")
        region = "us-east-1"

    }

    stages {
        stage('Checkout SCM'){
            steps{
                script{
                    checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/bertlshoferwe/Terra-EKS-Jenk.git']])
                }
            }
        }
        stage('Initialize Terraform'){
            steps{
                script{
                    dir('EKS')
                    sh 'terraform init'
                }
            }
        }
        stage('Validating Terraform'){
            steps{
                script{
                    dir('EKS')
                    sh 'terraform validate'
                }
            }
        }
        stage('Terraform plan'){
            steps{
                script{
                    dir('EKS')
                    sh 'terraform plan'
                }
                input(message: 'Are you sure you want to proceed?', ok: 'proceed')
            }
        }
        stage('Apply Changes'){
            steps{
                script{
                    dir('EKS')
                    sh 'terraform apply --auto-approve'
                }
            }
        }
        

    }
}